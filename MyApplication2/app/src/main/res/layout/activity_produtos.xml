<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/textColorPrimary">

    <EditText
        android:id="@+id/etNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/black"
        android:textColorHint="@color/textColorPrimary"
        android:layout_marginBottom="12dp"/>


    <EditText
        android:id="@+id/etPrecoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PreÃ§o do Produto"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/black"
        android:textColorHint="@color/textColorPrimary"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnSalvarProduto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Salvar Produto"
        android:textSize="16sp"
        android:textColor="@color/backgroundColor"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRemoverProduto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Remover Produto"
        android:textSize="16sp"
        android:textColor="@color/backgroundColor"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
